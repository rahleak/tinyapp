  <%- include('partials/_header') %>
  <form action="/register" method="POST">
    <h1 align="center"  style="margin: 1em;">Register</h1>
    <div align="center">
      <label for="email">Email:</label>
      <input class="form-control" type="email" name="email" placeholder="enter here" style="width: 300px; margin: 1em">
    <label for="password">Password:</label>
      <input class="form-control" type="password" name="password" placeholder="enter here" style="width: 300px; margin: 1em">
      <button style="position:center; right: 10px;;" type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>