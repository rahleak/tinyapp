<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" style="position:fixed; right: 100px;;" href="/register">Register</a>
        <%if (user) { %>
          <a class="nav-item nav-link" href="/urls">
            <%= `Signed in as: ${user.email}` %>
          </a>
          <form class="form-inline" action="/logout" method="POST">
            <button style="position:absolute; right: 10px;;" type="submit" class="btn btn-primary">Logout</button>
          </form>
          <% } %>
            <%if (!user) { %>
              <form class="form-inline" action="/login" method="GET">
                <button style="position:absolute; right: 10px;;" type="submit" class="btn btn-primary">Login</button>
              </form>
            <% } %>
      </div>
  </nav>
</header>
